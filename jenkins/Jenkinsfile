pipeline{
    agent any
    environment{
        registry="vikasharya000/vote" 
        dockerImage=""  
        docker_pat='docker_pat'
    }
    stages{
        stage('Building our image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry 
                }
            } 
        }
        stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( '', "dockerhub-creds" ) { 
                        dockerImage.push("${BUILD_NUMBER}") 
                        dockerImage.push("latest")
                    }
                } 
            }
        }
        stage('Package helm chart and push') {
            steps{
                timeout(time: 10, unit: "SECONDS") {

                    input message: 'approve the helm push?', ok: 'Yes'

                }
                script{
                    sh 'echo ${docker_pat} | helm registry login registry-1.docker.io -u vikasharya000 --password-stdin'
                    sh 'helm package ./chart/vote/'
                    sh 'helm push helm_vote-0.1.0.tgz oci://registry-1.docker.io/vikasharya000'

                }
            }
        }
    }
}