        //             echo \${dockertoken} | helm registry login registry-1.docker.io -u namrata1-99 --password-stdin
        //             helm package ./chart/vote/
        //             helm push helm_vote-0.\${new_minor_version}.0.tgz oci://registry-1.docker.io/namrata1-99
